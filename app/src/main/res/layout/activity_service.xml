<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:background="#3F51B5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:onClick="backHome"
                android:layout_marginLeft="10dp"
                android:id="@+id/main_logo"
                android:layout_weight="1"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:onClick="backHome"
                android:textColor="@color/colorWrite"
                android:layout_toRightOf="@id/main_logo"
                android:gravity="center_vertical"
                android:text="返回"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                style="@style/PageTitle"
                android:id="@+id/page_title"
                android:textColor="@color/colorWrite"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="服务"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
            android:id="@+id/txtHint"
            android:padding="10dp"
            android:text="请选择操控设备："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txtHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_spinner"/>
        </RelativeLayout>
    <RelativeLayout
        android:onClick="showSSDW"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dwIV"
            android:src="@drawable/ic_my_location_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/dwIV"
            android:text="实时定位"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FF909090" />


        <RelativeLayout
            android:onClick="showDZWL"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/wlIV"
                android:src="@drawable/ic_transform_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/wlIV"
                android:text="电子围栏"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090" />
        <RelativeLayout
            android:onClick="showZHWZ"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/zhwzIV"
                android:src="@drawable/ic_near_me_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/zhwzIV"
                android:text="最后一次位置"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <View
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090" />

        <RelativeLayout
            android:onClick="showMessage"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/txIV"
                android:src="@drawable/ic_forum_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/txIV"
                android:text="即时通讯"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090" />

        <RelativeLayout
            android:onClick="showCamera"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/caIV"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/caIV"
                android:text="拍照摄像"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#FF909090" />

</LinearLayout>


    <include android:id="@+id/menu"
        layout="@layout/main_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>