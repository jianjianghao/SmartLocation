<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#3F51B5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:onClick="backHome"
            android:id="@+id/main_logo"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:onClick="backHome"
            android:textColor="@color/colorWrite"
            android:layout_toRightOf="@id/main_logo"
            android:gravity="center_vertical"
            android:text="返回"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            style="@style/PageTitle"
            android:id="@+id/page_title"
            android:textColor="@color/colorWrite"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="拍照摄影"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <Button
        android:onClick="openCamera1"
        android:id="@+id/btn_open_camera1"
        android:text="@string/open_camera1"
        android:textColor="#212121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="openCamera2"
        android:id="@+id/btn_open_camera2"
        android:text="@string/open_camera2"
        android:textColor="#212121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="customCamera"
        android:id="@+id/btn_open_camera3"
        android:text="@string/open_camera3"
        android:textColor="#212121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>