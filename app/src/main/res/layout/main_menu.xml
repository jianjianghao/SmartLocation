<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWrite">

    <LinearLayout
        android:onClick="showMain"
        android:gravity="center_horizontal"
        android:paddingBottom="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:id="@+id/mTabHome"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mImageTabHome"
            android:src="@drawable/ic_account_balance_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/mTextTabHome"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorText"
            android:text="主页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:onClick="showDevice"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:id="@+id/mTabDevice"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mImageTabDevice"
                android:src="@drawable/ic_widgets_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mTextTabDevice"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorText"
                android:text="设备"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:onClick="showService"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:id="@+id/mTabService"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_local_florist_black_24dp"
                android:id="@+id/mImageTabService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mTextTabService"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorText"
                android:text="服务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:onClick="showAccount"
            android:gravity="center_horizontal"
            android:paddingBottom="3dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:id="@+id/mTabAccount"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mImageTabAccount"
                android:src="@drawable/ic_account_box_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mTextTabAccount"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorText"
                android:text="账户"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


</LinearLayout>